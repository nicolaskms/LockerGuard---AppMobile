<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@color/background"
    tools:context=".AlugarArmarioActivity"
    >

    <TextView
        android:id="@+id/txtAlugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ALUGAR ARMÁRIOS"
        android:textSize="24sp"
        android:fontFamily="@font/lato"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVoltarAluga"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-170dp"
        android:layout_marginTop="-40dp"
        android:backgroundTint="#A8A5AA"
        android:text=""
        app:icon="@drawable/baseline_arrow_back_24"
        app:iconGravity="textStart"
        app:iconPadding="1dp"
        app:iconTint="#FFFFFF" />

    <TextView
        android:id="@+id/txtOpcao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Escolha uma opção"
        android:fontFamily="@font/lato"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/opcao_10rs"
            android:background="@drawable/checkbox_outline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="R$ 10"
            android:gravity="center"
            android:drawableLeft="@drawable/shopping_basket"
            android:button="@null"
            android:padding="15dp"/>

        <RadioButton
            android:id="@+id/opcao_25rs"
            android:background="@drawable/checkbox_outline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R$ 25"
            android:gravity="center"
            android:drawableLeft="@drawable/shopping_basket"
            android:button="@null"
            android:padding="15dp"/>

        <RadioButton
            android:id="@+id/opcao_50rs"
            android:background="@drawable/checkbox_outline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R$ 50"
            android:gravity="center"
            android:drawableLeft="@drawable/shopping_basket"
            android:button="@null"
            android:padding="15dp"/>

        <RadioButton
            android:id="@+id/opcao_110rs"
            android:background="@drawable/checkbox_outline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R$ 110"
            android:gravity="center"
            android:drawableLeft="@drawable/shopping_basket"
            android:button="@null"
            android:padding="15dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/Aviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="O tempo de aluguel de todos os armários são estáticos (meia hora para 1h)"
        android:textSize="11.5sp"
        android:padding="2dp"
        android:fontFamily="@font/lato"
        />

    <TextView
        android:id="@+id/ArmarioID_Alugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Alugar Armário X"
        android:textStyle="bold"
        android:textSize="19.5sp"
        android:fontFamily="@font/lato"
        />

    <TextView
        android:id="@+id/Localizacao_Alugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Em frente ao prédio H15"
        android:fontFamily="@font/lato"/>

    <TextView
        android:id="@+id/Disponivel_Alugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Está Disponível: Sim"
        android:fontFamily="@font/lato"/>

    <Button
        android:id="@+id/btnConfirmarAluga"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/azul_tema"
        android:text="Confirmar"
        />

</LinearLayout>
