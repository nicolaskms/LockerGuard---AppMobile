<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d2d0d3"
    tools:context=".PagamentoActivity">

    <TextView
        android:id="@+id/textViewresumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumo"
        android:textSize="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/textViewInformacoesCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informações da Compra"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/textViewresumo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewIdArmario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID do Armário"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/textViewInformacoesCompra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Red"
        android:text="Localização"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewIdArmario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewApelidoCartao"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_CadastrarCartao"
        android:textAlignment="center"
        android:layout_marginTop="380dp"
        android:layout_marginBottom="16dp"/>


    <Button
        android:id="@+id/btn_CadastrarCartao"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_cadastrar_card"
        android:textAllCaps="false"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewApelidoCartao"
        app:layout_constraintBottom_toTopOf="@id/btnProsseguir"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>
    <Button
        android:id="@+id/btnProsseguir"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/pagamento"
        android:textAllCaps="false"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_CadastrarCartao"
        app:layout_constraintBottom_toTopOf="@id/btnVoltar"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_voltar"
        android:textAllCaps="false"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toBottomOf="@id/btnProsseguir"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
